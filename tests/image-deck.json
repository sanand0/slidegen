{
  "id": "image-deck",
  "name": "Image-Rich Presentation",
  "slide_size": { "w": 1280, "h": 720, "unit": "px" },
  "theme": {
    "colors": {
      "bg": "#f8fafc",
      "text": "#1e293b"
    },
    "fonts": { "body": "System UI" }
  },
  "masters": [{
    "id": "photo-master",
    "bg": {
      "fill": "#f8fafc",
      "image": "https://placehold.co/1280x720/e2e8f0/64748b?text=Background",
      "image_fit": "cover"
    },
    "layouts": [{
      "id": "image-focus",
      "bg": { "inherit": true },
      "shapes": [{
        "id": "title",
        "type": "text",
        "x": 5, "y": 5, "w": 90, "h": 15, "unit": "%",
        "text": "Image Title",
        "font_size": 32,
        "font_weight": 600,
        "color": "#ffffff",
        "text_align": "center"
      }, {
        "id": "main-image",
        "type": "image",
        "x": 20, "y": 25, "w": 60, "h": 50, "unit": "%",
        "image_src": "https://placehold.co/600x400/3b82f6/ffffff?text=Main+Image",
        "image_fit": "cover"
      }, {
        "id": "caption",
        "type": "text",
        "x": 20, "y": 80, "w": 60, "h": 10, "unit": "%",
        "text": "Image caption goes here",
        "font_size": 16,
        "color": "#64748b",
        "text_align": "center"
      }]
    }]
  }],
  "slides": [{
    "id": "photo1",
    "master": "photo-master",
    "layout": "image-focus",
    "overrides": [{
      "shape": "title",
      "text": "Product Showcase"
    }, {
      "shape": "main-image",
      "image_src": "https://placehold.co/600x400/10b981/ffffff?text=Product+Photo"
    }, {
      "shape": "caption",
      "text": "Our latest innovation in action"
    }]
  }, {
    "id": "photo2",
    "master": "photo-master",
    "layout": "image-focus",
    "overrides": [{
      "shape": "title",
      "text": "Customer Success"
    }, {
      "shape": "main-image",
      "image_src": "https://placehold.co/600x400/f59e0b/ffffff?text=Happy+Customer"
    }, {
      "shape": "caption",
      "text": "Real results from satisfied customers"
    }]
  }]
}
